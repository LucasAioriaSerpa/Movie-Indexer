<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" prefHeight="960.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.movieIndexer.Controller.MenuController">
    <stylesheets>
        <URL value="@../../styles/styleBase.css" />
    </stylesheets>
    <Text mouseTransparent="true" stroke="WHITE" strokeLineCap="ROUND" strokeWidth="0.0" text="Movie Indexer" textAlignment="CENTER">
        <font>
            <Font name="Harlow Solid Italic" size="70.0" />
        </font>
    </Text>
    <VBox alignment="CENTER" prefHeight="300.0" prefWidth="400.0" spacing="15.0">
        <VBox.margin>
            <Insets top="20.0" />
        </VBox.margin>
        <Button fx:id="btnInserir" onAction="#handleInserir" prefHeight="40.0" prefWidth="200.0" text="Inserir Filme" textAlignment="CENTER" />
        <Button fx:id="btnBuscar" onAction="#handleBuscar" prefHeight="40.0" prefWidth="200.0" text="Buscar Filmes" textAlignment="CENTER" />
        <Button fx:id="btnRemover" onAction="#handleRemover" prefHeight="40.0" prefWidth="200.0" text="Remover Filme" textAlignment="CENTER" />
        <Button fx:id="btnOpcoes" onAction="#handleOpcoes" prefHeight="40.0" prefWidth="200.0" text="Opções" textAlignment="CENTER" />
        <Button fx:id="btnSair" onAction="#handleSair" prefHeight="40.0" prefWidth="200.0" text="Sair" textAlignment="CENTER">
            <VBox.margin>
                <Insets top="20.0" />
            </VBox.margin>
        </Button>
    </VBox>
</VBox>