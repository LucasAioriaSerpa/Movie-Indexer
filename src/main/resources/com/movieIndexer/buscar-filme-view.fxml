<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" prefHeight="960.0" prefWidth="1280.0" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.movieIndexer.Controller.BuscarFilmeController">
    <stylesheets>
        <URL value="@../../styles/styleBase.css" />
    </stylesheets>
    <padding>
        <Insets bottom="40.0" left="80.0" right="80.0" top="40.0" />
    </padding>

    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Button fx:id="btnVoltar" mnemonicParsing="false" onAction="#handleVoltar" text="&lt; Voltar" />
        <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Buscar Filmes">
            <font>
                <Font name="Harlow Solid Italic" size="70.0" />
            </font>
        </Text>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <Label text="Algoritmo:" />
        <ComboBox fx:id="comboStrategy" prefWidth="220.0" promptText="Escolha o algoritmo" />
        <Label text="Ordenar por:" />
        <ComboBox fx:id="comboComparator" prefWidth="220.0" promptText="Escolha o critério" />
        <Button fx:id="btnRestaurar" mnemonicParsing="false" onAction="#handleRestaurarPreferencias" text="Restaurar padrão" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <Label text="Título:" />
        <TextField fx:id="fieldFiltroTitulo" prefWidth="220.0" promptText="Ex.: Senhor dos Anéis" />
        <Label text="Diretor:" />
        <TextField fx:id="fieldFiltroDiretor" prefWidth="220.0" promptText="Ex.: Christopher Nolan" />
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="15.0">
        <Label text="Ano (de/até):" />
        <TextField fx:id="fieldAnoInicial" prefWidth="100.0" promptText="1995" />
        <TextField fx:id="fieldAnoFinal" prefWidth="100.0" promptText="2024" />
        <Label text="Duração (min - de/até):" />
        <TextField fx:id="fieldDuracaoMin" prefWidth="100.0" promptText="90" />
        <TextField fx:id="fieldDuracaoMax" prefWidth="100.0" promptText="180" />
        <Button fx:id="btnLimparFiltros" mnemonicParsing="false" onAction="#handleLimparFiltros" text="Limpar filtros" />
    </HBox>

    <TableView fx:id="tableViewFilmes" VBox.vgrow="ALWAYS">
        <columns>
            <TableColumn fx:id="colId" prefWidth="70.0" text="ID" />
            <TableColumn fx:id="colTitulo" prefWidth="250.0" text="Título" />
            <TableColumn fx:id="colDiretor" prefWidth="200.0" text="Diretor" />
            <TableColumn fx:id="colAno" prefWidth="100.0" text="Ano" />
            <TableColumn fx:id="colDuracao" prefWidth="100.0" text="Duração (min)" />
            <TableColumn fx:id="colSinopse" prefWidth="380.0" text="Sinopse" />
        </columns>
        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
        </columnResizePolicy>
    </TableView>

    <Label fx:id="lblTotalFilmes" style="-fx-font-size: 1.1em;" text="0 filmes encontrados." />

</VBox>